@model CVProject.Models.Entity.Post

@{
    ViewData["Title"] = "Create";
}


<div class="content">
    <ul class="breadcrumb">
        <li>
            <p>YOU ARE HERE</p>
        </li>
        <li><a href="#" class="active">Paylasimlar</a> </li>
    </ul>
    <div class="page-title">
        <i class="icon-custom-left"></i>
        <h3><a asp-action="Index">Paylasimlar</a> - <span class="semi-bold">Yenisini Yarat</span></h3>
    </div>
    <div class="row" id="inbox-wrapper">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-12">
                    <div class="grid simple">
                        <div class="grid-body no-border email-body">
                            <br>
                            <div class="row-fluid">
                                <div class="row">
                                    <div class="col-md-4">
                                        <form asp-action="Create" id="blogform" enctype="multipart/form-data">
                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                            <div class="form-group">
                                                <label asp-for="Title" class="control-label"></label>
                                                <input asp-for="Title" class="form-control" />
                                                <span asp-validation-for="Title" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="Author" class="control-label"></label>
                                                <input asp-for="Author" class="form-control" />
                                                <span asp-validation-for="Author" class="text-danger"></span>
                                            </div>
                                            <div class="form-group col-12">
                                                <label for="blogFile" id="blogFile-viewer"></label>
                                                <input type="file" name="blogImage" id="blogFile" accept="image/x-png,image/gif,image/jpeg" />
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="Description" class="control-label"></label>
                                                <input asp-for="Description" class="form-control" />
                                                <span asp-validation-for="Description" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <input type="submit" value="Create" class="btn btn-default" />
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>


@section scripts{

    <script src="~/lib/ckeditor5/ckeditor.js"></script>
    <script>
        $('#blogform').on("keyup keypress", function (e) {
            var keycode = e.keycode || e.which;
            if (keycode == 13) {
                e.preventDefault();
                return false;
            }
        });

        ClassicEditor
            .create(document.querySelector('#Body'))
            .catch(error => {
                console.error(error);
            });



        $('#blogFile').change(function (e) {

            let reader = new FileReader();
            reader.addEventListener("load", function () {
                $('#blogFile-viewer').css({
                    'background-image': `url(${reader.result})`
                })
            }, false);

            reader.readAsDataURL(e.target.files[0]);

            console.log('changed');

        });
    </script>

}
@section css{
    <style>
        .ck-editor__editable {
            min-height: 200px !important;
        }

        #blogFile {
            display: none;
        }

        #blogFile-viewer {
            width: 300px;
            height: 300px;
            border: 1px solid #ccc;
            background-repeat: no-repeat;
            background-size: cover;
            background-position: center;
        }
    </style>
}