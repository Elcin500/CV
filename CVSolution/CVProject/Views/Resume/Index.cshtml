@model Person
@{
    ViewData["Title"] = "Index";
}


<div class="col-md-8">
    <div class="inside-sec">
        <!-- BIO AND SKILLS -->
        <h5 class="tittle">Bio & Skills</h5>
        <div class="bio-info padding-30">
            <p>
                @Model.Bio
            </p>
            <div class="skills">

                <!-- HARD SKILLS -->
                <h5 class="margin-top-30">Hard Skills</h5>

                <div class="panel-group accordion" id="accordion">
                    @foreach (var item in Model.Skills.Where(s=>s.Category=="Hard Skill"))
                    {
                        <div class="panel panel-default">
                            <div class="row">
                                <div class="col-sm-4">
                                    <!-- PANEL HEADING -->
                                    <div class="panel-heading">
                                        <h4 class="panel-title"> <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne"> @item.Name</a> </h4>
                                    </div>
                                </div>

                                <!-- Skillls Bars -->
                                <div class="col-sm-8">
                                    <div class="progress">
                                        <div class="progress-bar" role="progressbar" aria-valuenow="@item.Percent" aria-valuemin="0" aria-valuemax="100" style="width: @item.Percent%;"> <span class="sr-only">@item.Percent% Complete</span> </div>
                                    </div>

                                    <!-- Skillls Text -->
                                    <div id="collapseOne" class="panel-collapse collapse in">
                                        <div class="panel-body">
                                            <p>@item.Description</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                </div>

                <!-- Soft Skills -->
                <h5 class="margin-top-30">Soft Skills</h5>

                <div class="panel-group accordion" id="accordion1">
                    @foreach (var item in Model.Skills.Where(s => s.Category == "Soft Skill"))
                    {
                        <div class="panel panel-default">
                            <div class="row">
                                <div class="col-sm-4">
                                    <!-- PANEL HEADING -->
                                    <div class="panel-heading">
                                        <h4 class="panel-title"> <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne"> @item.Name</a> </h4>
                                    </div>
                                </div>

                                <!-- Skillls Bars -->
                                <div class="col-sm-8">
                                    <div class="progress">
                                        <div class="progress-bar" role="progressbar" aria-valuenow="@item.Percent" aria-valuemin="0" aria-valuemax="100" style="width: @item.Percent%;"> <span class="sr-only">@item.Percent% Complete</span> </div>
                                    </div>

                                    <!-- Skillls Text -->
                                    <div id="collapseOne" class="panel-collapse collapse in">
                                        <div class="panel-body">
                                            <p>@item.Description</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                </div>

                <!-- Follow ethical -->
                <div class="ethical">
                    <h6>Follow ethical work practices</h6>
                    <a href="#.">Prioritize Learning Tasks</a> <a href="#.">Make Ethical Choices</a> <a href="#.">Social Work</a> <a href="#.">Community Work</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Professional Experience -->
    <div class="inside-sec margin-top-30">
        <!-- Professional Experience -->
        <h5 class="tittle">Professional Experience</h5>
        <div class="padding-30 exp-history">

            @foreach (var item in Model.Experiences)
            {

                <div class="exp">
                    <div class="media-left"> <span class="sun">@item.Years</span> </div>
                    <div class="media-body">

                        <!-- COmpany Logo -->
                        <div class="company-logo"> <img style="width:150px;" src="~/uploads/@item.CompanyLogoImgPath" alt=""> </div>
                        <h6>@item.JobTitle</h6>
                        <p>@item.JobArea</p>
                        <p>@item.Location</p>
                        <p class="margin-top-10" style="width: 350px;"> @item.Description <a href="#.">Read More</a> </p>
                    </div>
                </div>
            }

        </div>
    </div>

    <!-- Academic Background -->
    <div class="inside-sec margin-top-30">
        <!-- Academic Background -->
        <h5 class="tittle">Academic Background</h5>
        <div class="padding-30 exp-history">
            @foreach (var item in Model.Studies)
            {

                <div class="exp">
                    <div class="media-left"> <span class="sun">@item.Years</span> </div>
                    <div class="media-body">
                        <!-- COmpany Logo -->
                        <div class="company-logo"> <span class="diploma"><i class="fa fa-graduation-cap"></i> Download Diploma</span> </div>
                        <h6>@item.Name</h6>
                        <p>@item.StudyArea</p>
                        <p>@item.Location</p>
                        <p class="margin-top-10"> @item.Description (...) <a href="#.">Read More</a> </p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

